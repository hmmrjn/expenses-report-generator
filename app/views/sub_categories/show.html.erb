<div class="container">

<p id="notice"><%= notice %></p>

<h1><%= link_to @sub_category.category.name.upcase, @sub_category.category %> ï¼ž <%= @sub_category.name.titleize %></h1>

<br>

<h2>
  Expenses
  <small class="text-muted"> in this Sub Group</small>
</h2>
<br>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th scope="col" class="text-right">Amount</th>
      <th scope="col" class="text-right">Group</th>
      <th scope="col">Sub Group</th>
      <th scope="col">Input at</th>
      <th scope="col" colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @sub_category.expenses.order(date: :DESC).each do |expense| %>
      <tr scope="row">
        <td><%= expense.date %></td>
        <td class="text-right"><%= expense.amount.to_s(:delimited) %></td>
        <td class="text-right table-active"><%= expense.sub_group.group.name.titleize %></td>
        <td class="table-active"><%= expense.sub_group.name.titleize %></td>
        <td class="text-black-50 table-active"><%= expense.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td class="text-center"><%= link_to edit_expense_path(expense), title: 'Edit' do %><i class="fas fa-edit text-dark"></i><% end %></td>
        <td class="text-center"><%= link_to expense, title: 'Delete', method: :delete, data: { confirm: 'Are you sure?' } do %><i class="fas fa-trash text-danger"></i><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_sub_category_path(@sub_category) %> |
<%= link_to 'Back', categories_path %>

<br>
<br>

</div>
